{
  "name": "@melchyore/adonis-lucid-observer",
  "version": "0.0.0",
  "private": false,
  "description": "Observer package for AdonisJS V5 Lucid ORM",
  "author": "Oussama Benhamed",
  "keywords": [
    "adonis",
    "adonisjs",
    "javascript",
    "typescript",
    "js",
    "ts",
    "lucid",
    "database",
    "observer",
    "observers",
    "sql",
    "pg",
    "postgre",
    "package",
    "module",
    "postgresql",
    "oracle",
    "observable",
    "event",
    "events",
    "hook",
    "hooks",
    "model",
    "orm"
  ],
  "homepage": "https://github.com/Melchyore/adonis-lucid-observer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Melchyore/adonis-lucid-observer.git"
  },
  "bugs": {
    "url": "https://github.com/Melchyore/adonis-lucid-observer/issues"
  },
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "npm run compile",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node -r @adonisjs/require-ts/build/register bin/test/index.ts",
    "clean": "del-cli build",
    "compile": "npm run lint && npm run clean && tsc && npm run copyfiles",
    "copyfiles": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "prepublishOnly": "npm run build",
    "commit": "git-cz",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json Melchyore/adonis-lucid-observer"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.7.0",
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.12",
    "@japa/expect": "^1.1.4",
    "@japa/preset-adonis": "^1.0.16",
    "@japa/runner": "^2.0.8",
    "@poppinss/dev-utils": "^2.0.3",
    "@types/node": "^17.0.39",
    "adonis-preset-ts": "^2.1.0",
    "commitizen": "^4.2.4",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "github-label-sync": "^2.2.0",
    "husky": "^8.0.1",
    "mrm": "^4.0.0",
    "np": "^7.6.1",
    "pino-pretty": "^8.0.0",
    "prettier": "^2.6.2",
    "sqlite3": "^5.0.8",
    "typescript": "~4.6",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.4"
  },
  "dependencies": {
    "@adonisjs/core": "^5.8.0",
    "@adonisjs/lucid": "^18.0.1",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21"
  },
  "mrmConfig": {
    "core": false,
    "license": "MIT",
    "services": [
      "github-actions"
    ],
    "minNodeVersion": "16.14.0",
    "probotApps": [
      "stale",
      "lock"
    ],
    "runGhActionsOnWindows": false
  },
  "license": "MIT",
  "main": "./build/providers/LucidObserverProvider.js",
  "types": "./build/adonis-typings/index.d.ts",
  "files": [
    "build/adonis-typings",
    "build/providers",
    "build/templates",
    "build/commands",
    "build/src",
    "build/instructions.js",
    "build/instructions.md"
  ],
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "adonisjs": {
    "instructions": "./build/instructions.js",
    "instructionsMd": "./build/instructions.md",
    "types": "@melchyore/adonis-lucid-observer",
    "providers": [
      "@melchyore/adonis-lucid-observer"
    ],
    "commands": [
      "@melchyore/adonis-lucid-observer/build/commands"
    ]
  }
}
